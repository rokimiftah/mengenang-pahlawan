{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",

	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	},

	"formatter": {
		"enabled": false
	},

	"linter": {
		"rules": {
			"a11y": {
				"noStaticElementInteractions": "off",
				"noSvgWithoutTitle": "off",
				"useButtonType": "off",
				"useKeyWithClickEvents": "off"
			},
			"recommended": true,
			"suspicious": {
				"noArrayIndexKey": "off"
			}
		}
	}
}
